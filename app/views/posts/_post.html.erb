<div id="<%= dom_id post %>">
  <div class="card">
    <div class="card-header">
      <h4 class="card-title"><%= post.title %></h4>
      <p><%= pluralize(post.views, "View") %></p>
      <p>Posted by: <%= post.user.email %></p>
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= post.body %>
      </p>
    </div>
    <div class="card-footer">
      <%= link_to 'Delete', posts_path(post), method: :delete %>
    </div>
  </div>

</div>
