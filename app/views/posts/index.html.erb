<div class="container">

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
<%end %>

  <h1>All Posts</h1>
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>
