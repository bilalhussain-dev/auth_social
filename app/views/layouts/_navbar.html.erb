<header class="p-3 mb-3 border-bottom">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
        <span class="logo-main">LOGO</span>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

        <%= link_to 'Home', root_path, class: 'nav-link px-2 link-secondary'%>
        <%= link_to 'About', about_path, class: 'nav-link px-2 link-dark'%>
        <%= link_to 'Contact', contact_path, class: 'nav-link px-2 link-dark'%>
        <%= link_to 'Blog', posts_path, class: 'nav-link px-2 link-dark'%>
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
      </form>

      <% if current_user %>
        <span>Hi, <%= current_user.name %></span>
        <div class="dropdown text-end">
          <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
          </a>
          <ul class="dropdown-menu text-small" style="">
            <%= link_to 'New Post', new_post_path, class: 'dropdown-item' %>
<!--            <li><a class="dropdown-item" href="#">Settings</a></li>-->
            <%= link_to 'Account Settings', edit_user_registration_path, class: 'dropdown-item' %>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider"></li>
            <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
          </ul>
        </div>

        <%else %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-outline-primary btn-lg' %>
        <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary btn-lg ms-2' %>
      <%end %>
    </div>
  </div>
</header>